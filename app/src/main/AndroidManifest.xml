<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ariel.SE_project.worki">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".assistance_classes.MyNotificationHandler" />

        <activity
            android:name=".shift_management.CreateShifts"
            android:label="Manage Shifts" />
        <activity
            android:name=".shift_management.RegisterToShifts"
            android:label="Join Shifts" />
        <activity
            android:name=".signed_in_activities.ListOfUserConnected"
            android:label="Connected Users" />
        <activity android:name=".worker_to_company_registration.RegistrationOfWorkerFromCompaniesActivity" />
        <activity android:name=".worker_to_company_registration.RegisterWorkerToCompanyActivity" />
        <activity
            android:name=".login_register.RegisterCompany"
            android:allowBackup="false" />
        <activity android:name=".signed_in_activities.TimerActivity" />
        <activity
            android:name=".login_register.LoginRegisterActivity"
            android:allowBackup="false"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>